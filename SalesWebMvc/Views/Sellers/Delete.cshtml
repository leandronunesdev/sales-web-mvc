@model SalesWebMvc.Models.Seller
@{
    ViewData["Title"] = "Delete";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this?</h3>

<div>
    <h4>Seller</h4>
    <hr />

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label fw-bold">@Html.DisplayNameFor(model => model.Name)</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Name)</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label fw-bold">@Html.DisplayNameFor(model => model.Email)</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Html.DisplayFor(model => model.Email)</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label fw-bold">@Html.DisplayNameFor(model => model.BirthDate)</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.BirthDate.ToString("yyyy-MM-dd")</p>
        </div>
    </div>

    <div class="mb-3 row">
        <label class="col-sm-3 col-form-label fw-bold">@Html.DisplayNameFor(model => model.BaseSalary)</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.BaseSalary.ToString("C")</p>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
